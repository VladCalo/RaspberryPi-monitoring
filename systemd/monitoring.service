[Unit]
Description=Raspberry Pi Monitoring Stack
Requires=docker.service
After=docker.service
Wants=network-online.target
After=network-online.target

[Service]
Type=oneshot
RemainAfterExit=yes
ExecStart=/opt/monitoring/manage.sh start
ExecStop=/opt/monitoring/manage.sh stop
TimeoutStartSec=300
TimeoutStopSec=60

[Install]
WantedBy=multi-user.target
